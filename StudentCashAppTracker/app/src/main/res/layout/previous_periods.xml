<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/startDateString"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Date: "
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/startDateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/startDateString"
        android:layout_toRightOf="@+id/startDateString"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/endDateString"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/startDateString"
        android:text="End Date: "
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/endDateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/endDateString"
        android:layout_toRightOf="@+id/endDateString"
        android:ellipsize="end"/>
    <TextView
        android:id="@+id/totalExpenseString"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/endDateString"
        android:text="Total Expenses: "
        android:textAppearance="?android:attr/textAppearanceSmall" />


    <TextView
        android:id="@+id/totalExpenseText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/totalExpenseString"
        android:layout_toRightOf="@+id/totalExpenseString"
        android:ellipsize="end"
        android:textAppearance="?android:attr/textAppearanceSmall" />



</RelativeLayout>